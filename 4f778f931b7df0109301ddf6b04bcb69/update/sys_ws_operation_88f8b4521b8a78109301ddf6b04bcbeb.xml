        <name>bid</name>
        <operation_script><![CDATA[(function process(/*RESTAPIRequest*/ request, /*RESTAPIResponse*/ response) {

    var userID = request.body.data.userID;
	var listingID = request.body.data.listingID;
	var amount = parseInt(request.body.data.amount);
	var answer = {
		msg : "",
		status : 400
	};
	
	var bidObj = new Bid().makeBid({
		"userID" : userID,
		"listingID" : listingID,
		"amount" : amount
	});
	
	answer.msg = bidObj.msg;
	
	if (bidObj.status == Constants.BID_OK) {
		answer.status = 200;
	}
	
	response.setBody({"answer" : answer});
	response.setStatus(answer.status);

})(request, response);]]></operation_script>
